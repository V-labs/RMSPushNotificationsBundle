<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="rms_push_notifications.web.fcm.class">RMS\PushNotificationsBundle\Service\OS\WebFCMNotification</parameter>
    </parameters>

    <services>

        <!-- Web (FCM) -->
        <service id="rms_push_notifications.web.fcm" class="%rms_push_notifications.web.fcm.class%" public="false">
            <argument>%rms_push_notifications.web.fcm.api_key%</argument>
            <argument>%rms_push_notifications.web.fcm.use_multi_curl%</argument>
            <argument>%rms_push_notifications.web.timeout%</argument>
            <argument type="service" id="monolog.logger.push_notification" />
            <argument>null</argument>
            <tag name="rms_push_notifications.handler" osType="rms_push_notifications.os.web.fcm" />
        </service>

    </services>

</container>
